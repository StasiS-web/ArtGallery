@using ArtGallery.Web.ViewModels.Users
@model UserRolesViewModel
@{
    ViewData["Title"] = "User Roles";
    var items = (List<SelectListItem>)ViewBag.RoleItems;
}

<div class="row">
    <div class="col-8">
        <form id="roles" method="post">
                <input type="hidden" name="UserId" value="@Model.UserId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <h3>User: @Html.DisplayFor(u => u.Name)</h3>
                </div>
                <div class="form-floating">
                   <div class="form-group">
                       <label>User Roles</label>
                       <select asp-for="RoleIds" asp-items="@items" multiple="" class="form-check">
                           
                       </select>
                   </div>
                </div>
                <div class="row">
                    <div class="col-4">
                       <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
    </div>
</div>