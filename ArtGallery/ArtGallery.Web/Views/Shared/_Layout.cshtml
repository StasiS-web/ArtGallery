@using ArtGallery.Common

<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="ArtGallery" />
    <title>@ViewData["Title"] - ArtGallery.Web</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link rel="reponsive" href="~/css/responsive.css" rel="stylesheet" asp-append-version="true" />
     <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="dist/css/adminlte.min.css">

    <!-- Other head element -->
    @Html.Partial("_Favicons")

    @this.RenderSection("Styles", required: false)
</head>
<body>
    <!-- Header -->
    <header class="header">
        <!-- Brand Logo -->
        <a href="index3.html" class="brand-link">
          <img src="~/img/ArtGalleryLogo.png" alt="ArtGallery Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        </a>

        <partial name ="_NavigationPartial" />

    </header>
    <!-- Header -->

     <!-- Sidebar -->
         <div class="sidebar">
              <!-- Sidebar user panel (optional) -->
              <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                  <div class="image">
                  <img src="~/img/user5-128x128.jpg" class="img-circle elevation-2" alt="User Image">
                  </div>
                  <div class="info">
                     <a href="#" class="d-block">Alexandra Pierce</a>
                  </div>
               </div>
        </div>

        <main role="main">
        @this.RenderBody()
        </main>

        <partial name="_FooterPartial" />

    <!-- REQUIRED SCRIPTS -->

    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/lib/bootstrap/dist/css/bootstrap.css"></script> 
    <script src="~/css/site.css" asp-append-version="true"></script> 

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
