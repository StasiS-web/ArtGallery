@using ArtGallery.Common
    
@if (ViewData[MessageConstants.ErrorMessages] != null)
{
    <script>
        $(function() {
            toastr.error('@ViewData[MessageConstants.ErrorMessages]?.ToString()');
        });
    </script>
}

@if (ViewData[MessageConstants.WarningMessage] != null)
{
    <script>
        $(function() {
            toastr.error('@ViewData[MessageConstants.WarningMessage]?.ToString()');
        });
    </script>
}

@if (ViewData[MessageConstants.OperationalMessages] != null)
{
    <script>
        $(function() {
            toastr.error('@ViewData[MessageConstants.OperationalMessages]?.ToString()');
        });
    </script>
}
