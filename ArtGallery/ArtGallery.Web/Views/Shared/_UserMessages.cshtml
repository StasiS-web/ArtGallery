@using ArtGallery.Common
    
@if (ViewData[MessageConstants.ErrorMessage] != null)
{
    <script>
        $(function() {
            toastr.error('@ViewData[MessageConstants.ErrorMessage]?.ToString()');
        });
    </script>
}

@if (ViewData[MessageConstants.WarningMessage] != null)
{
    <script>
        $(function() {
            toastr.error('@ViewData[MessageConstants.WarningMessage]?.ToString()');
        });
    </script>
}

@if (ViewData[MessageConstants.OperationalMessage] != null)
{
    <script>
        $(function() {
            toastr.error('@ViewData[MessageConstants.OperationalMessage]?.ToString()');
        });
    </script>
}
