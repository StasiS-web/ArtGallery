@model ArtGallery.Infrastructure.Data.Models.FaqEntity
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete FAQ";
    Layout = "/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-8">
        <form method="post">
            <h4>Delete FAQ with id: @Model.Id</h4>
            <input type="hidden" asp-for="Id" />
            <div class="form-floating">
                <label asp-for="Question" class="form-lable"></label>
                <input asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Answer" class="form-lable"></label>
                <textarea asp-for="Answer" class="form-control"></textarea>
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-block btn-danger">Delete</button>
            <button asp-area="Administration" asp-controller="About" asp-action="All" class="btn btn-block btn-primary">All FAQ</button>
        </form>
    </div>
</div>