@using ArtGallery.Core.Models.BlogPosts
@using Microsoft.AspNetCore.Mvc.Localization
@model AllBlogPostsListViewModel
@inject IViewLocalizer localizer
@{
    ViewBag.Title = localizer["PageTitle"];
}

<div class="card card-success">
          <div class="card-body">
            <div class="row">
                   @foreach (var blogPost in ViewBag.AllBlog)
                   {
                        <div class="col-md-12 col-lg-6 col-xl-4">
                           <div class="card mb-2 bg-gradient-dark">
                             <div class="card-img-overlay d-flex flex-column justify-content-end">
                               <h5 class="card-title text-primary text-white" asp-area="" asp-controller="BlogPost"  asp-action="Index" asp-route-id="@blogPost.BlogId">@blogPost.Title</h5>
                               <img class="card-img-top" src="" alt="">
                               <div class="card-text text-white pb-2 pt-1" asp-controller="BlogPost"  asp-action="Index" asp-route-id="@blogPost.BlogId">by @blogPost.Author</div>
                                <a href="#" class="text-white" asp-controller="BlogPost"  asp-action="Index" asp-route-id="@blogPost.BlogId">@blogPost.CreatedOn</a>
                               <div class="card-text text-white">
                                 @blogPost.ShortContect
                               </div>
                               <a href="#" class="text-white" asp-controller="BlogPost"  asp-action="Index" asp-route-id="@blogPost.BlogId">Read More</a>
                             </div>
                           </div>
                        </div>
                    }
            </div>

            <!-- Sidebar -->
            <aside class="row">
                <div class="col">
                    <div>
                        <h4 class="sidebar-dark">localizer["SidebarHeader"]</h4>
                        <div>@await Component.InvokeAsync("GetLatestBlogAsync", 2)</div>
                    </div>
                </div>
            </aside>

           <a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
              <i class="fas fa-chevron-up"></i>
          </a>
          </div>
        </div>

    