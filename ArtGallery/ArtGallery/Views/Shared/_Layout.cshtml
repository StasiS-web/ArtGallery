<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="ArtGallery" />
    <title>@ViewData["Title"]</title>

     <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel='icon' href="/favicon.ico" type="image/x-icon" />
    <!-- Font Awesome Icons -->

    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="/css/adminlte.min.css" />
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="/plugins/overlayScrollbars/css/OverlayScrollbars.min.css" />
    <link rel="stylesheet" href="/plugins/toastr/toastr.min.js" />
    
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />

    @RenderSectionAsync("Head", false)
</head>
<body class="hold-transition sidebar-mini layout-fixed dark-mode">
   <div class="wrapper">
         <!-- Navbar -->
         <nav class="navbar-primary navbar-light navbar-toggleable-sm navbar-expand navbar-white">
            <partial name="_Navigation" />
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
              <!-- Navbar Search -->
                 <li class="nav-item">
                      <form class="form-inline" asp-area="Identity" asp-action="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <i class="fas fa-door-open"></i>
                            <button type="submit" class="nav-link btn-outline-info">Logout</button>
                      </form>
                 </li>
                 <li class="nav-item">
                     <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                     </a>
                 </li>
            </ul>
         </nav>
            <!-- /.navbar -->

            <!-- Main Sidebar Container -->
       <aside class="main-sidebar sidebar-dark-primary elevation-4">
           <!-- Brand Logo -->
           <a asp-area="" asp-controller="User" asp-action="Profile"  class="brand-link">
              <img src="/img/ArtGalleryLogo.png" alt="ArtGallery Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
              <span class="brand-text font-weight-light">ArtGallery</span>
           </a>

          <div class="sidebar">
              <!-- Sidebar user panel (optional) -->
              <ul class="flex-row align-items-center justify-centre-start">
                  <partial name="_LoginPartial" />
              </ul>
           </div>
           <!-- /.sidebar -->
        </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
         <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                   <div class="row mb-2">
                      <div class="col-sm-6">
                           <h1 class="m-0">@ViewData["Title"]</h1>
                      </div><!-- /.col -->
                      <div class="col-sm-6">
                         <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Starter Page</li>
                         </ol>
                      </div><!-- /.col -->
                    </div><!-- /.row -->
               </div><!-- /.container-fluid -->
           </div>
    <!-- /.content-header -->
     
      <!-- Main content -->
        <div class="content">
            <main class="container-fluid">
                @this.RenderBody()
           </main><!-- /.container-fluid -->
        </div>
        <!-- /.content -->
    </div>
     <!-- /.content-wrapper -->

    <partial name="_FooterPartial" />
</div>
<!-- ./wrapper -->

  <!-- REQUIRED SCRIPTS -->
    <script src="/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="dist/js/adminlte.js"></script>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_UserMessages" />

 @await RenderSectionAsync("Scripts", required: false )
</body>
</html>
