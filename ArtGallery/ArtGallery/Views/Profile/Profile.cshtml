@using ArtGallery.Core.Models.Users
@using Microsoft.AspNetCore.Mvc.Localization
@model ProfileViewModel
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["PageTitle"];
}

@if (this.TempData["MessageConstants"] != null)
{
    <div class="alert-default-success">
        @this.TempData["MessageConstants"]
    </div>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-4">
            <img src="@Model.Photo" alt="" style="width:300px; height:300px;" />
        </div>
        <div class="col-4"">
           <div class="text-danger" style="color:darkblue">
               <h4>@ViewData["Title"]</h4>
           </div>
           <lable>@localizer["lblFirstName"]</lable>
           <div class="text-danger">
               @Model.FirstName
           </div>
           <lable>@localizer["lblLastName"]</lable>
           <div class="text-danger">
               @Model.LastName
           </div>
           <div class="text-danger">
               @localizer["lblUserName"]: @Model.UserName
           </div>
           <div class="text-danger">
               @localizer["lblGender"]: @Model.Gender
           </div>
           <div class="text-danger">
               @localizer["lblEmail"]: @Model.Email
           </div>
           <div>
               <a class="btn btn-info" asp-area="" asp-action="UpdateProfile" asp-route-id="@Model.UserId">Update Profile</a>
           </div>
        </div>
    </div>
</div>

